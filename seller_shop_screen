s6)  ┌─[seller_shop_book                     ]                                  [section       ]
---- ├ [seller_shop_book_button              ]                                  [button        ] "РЕЗЕРВИРОВАНИЕ"                               [ yes ]
---- ├ [seller_shop_book_widget              ]                                  [widget        ]                                                [ no  ]
---- ├ [seller_shop_book_toggle              ]                                  [toggle        ]                       [color1/color2]          [ yes ]
---- └ [seller_shop_book_indicator           ]                                  [indicator     ]                       [color1/color2]          [ no  ]
s7)  ┌─[seller_shop_geoposition              ]                                  [section       ]
---- ├ [seller_shop_geoposition_address      ]                                  [text          ]                                                [ no  ]
---- ├ [seller_shop_geoposition_geomap_mini  ]                                  [widget        ]                                                [ no  ]  
---- └ [seller_shop_geoposition_button       ]                                  [button        ] "ГЕО"                 [color1/color2]          [ yes ]
s8)  ┌─[seller_shop_searchlot                ]                                  [section       ]
---- ├ [seller_shop_searcher                 ]                                  [input+button  ]                                                [ yes ]
---- └ [seller_shop_add_lot                  ]                                  [button        ] "ОТКРЫТЬ НАСТРОЙКИ"   [color1/color2]          [ yes ]
s9)  ┌─[seller_shop_stat                     ]                                  [section       ]
---- ├ [seller_shop_stat_sales_day           ]                                  [widget+button ] "ПРОДАЖИ"             [color1/color2]          [ yes ] 
---- └ [seller_shop_stat_profit_day          ]                                  [widget+button ] "ДОХОД"               [color1/color2]          [ yes ]       
s10)┌─ [seller_nav                           ]                                  [section       ]
----├┬ [seller_nav_monitor_button            ]                                  [button        ]                       [color1/color2]          [ yes ]
    │├ [seller_nav_monitor_name              ]                                  [button        ] "МОНИТОР"             [color1/color2]            
	│└ [seller_nav_monitor_indicator         ]                                  [button        ]                       [color1/color2]           	
----├┬ [seller_nav_chat_button               ]                                  [button        ]                       [color1/color2]          [ yes ]   
----│├ [seller_nav_chat_name                 ]                                  [button        ] "ЧАТ"                 [color1/color2]           
----│└ [seller_nav_chat_indicator            ]                                  [button        ]                       [color1/color2]           
----├┬ [seller_nav_shop_button               ]                                  [button        ]                       [color1/color2]          [ yes ]   
----│├ [seller_nav_shop_name                 ]                                  [button        ] "МАГАЗИН"             [color1/color2]           
----│└ [seller_nav_shop_indicator            ]                                  [button        ]                       [color1/color2]             
